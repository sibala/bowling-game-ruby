<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Nytt Spel</h1>
		</div>
	</div>

	<br>
	
	<div class="row">		
		<div class="col-sm-12">
			<% flash.each do |key, value| %>
			  <div class="col-sm-4 alert alert-danger">
				<%= content_tag :div, value, class: "flash #{key}" %>
			  </div>
			<% end %>

			<%= form_tag("/games", method: "post") do%>
				<div class="form-group">
					<%= label_tag(:player_name1, "Spelare 1:", class: "control-label") %>
					<%= text_field_tag(:player_name1, "", class: "col-md-4 form-control")%>
				</div>

				<div class="form-group">
					<%= label_tag(:player_name2, "Spelare 2:", class: "control-label") %>
					<%= text_field_tag(:player_name2, "", class: "col-md-4 form-control")%>
				</div>

				<div class="form-group">
					<%= submit_tag("Starta Spelet", class: "btn btn-primary") %>
				</div>
			<% end %>
		</div>
	</div>

</div>